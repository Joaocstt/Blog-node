{{#each erros}}

<div class="alert alert-danger">
    {{texto}}
</div>

{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova postagem:</h4>
        <form action="/admin//postagens/nova" method="post">
            <label>Título:</label>
            <input type="text" name="titulo" class="form-control" >
            <label>Slug:</label>
            <input type="text" name="slug" class="form-control" >
            <label>Descrição:</label>
            <input type="text" name="descricao" class="form-control" >
            <label>Conteúdo: </label>
            <textarea name="conteudo" class="form-control" ></textarea>
            <label>Categoria</label>
            <select name="categoria" id="categoria" class="form-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-3" type="submit">Criar postagem</button>
        </form>
    </div>
</div>