{{#each erros}}

<div class="alert alert-danger">
    {{texto}}
</div>

{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar postagem:</h4>
        <form action="/admin/postagem/edit" method="post">
        <input type="hidden" value="{{postagem._id}}" name="id">
            <label>Título:</label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}" >
            <label>Slug:</label>
            <input type="text" name="slug" class="form-control" value="{{postagem.slug}}" >
            <label>Descrição:</label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}">
            <label>Conteúdo: </label>
            <textarea name="conteudo" class="form-control" >{{postagem.conteudo}}</textarea>
            <label>Categoria</label>
            <select name="categoria" id="categoria" class="form-select">
                {{#each categoria}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-3" type="submit">Editar postagem</button>
            
        </form>
    </div>
</div>